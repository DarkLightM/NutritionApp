<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.nutritionapp.login.presentation.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth">
        <deepLink app:uri="com.example.nutritionapp.login.presentation.auth-fragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.nutritionapp.login.presentation.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <deepLink app:uri="com.example.nutritionapp.login.presentation.register-fragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.nutritionapp.home.presentation.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <deepLink app:uri="com.example.nutritionapp.home.presentation.home-fragment" />

    </fragment>
    <fragment
        android:id="@+id/addFoodFragment"
        android:name="com.example.nutritionapp.nutrition.presentation.NutritionFragment"
        android:label="fragment_add_food"
        tools:layout="@layout/fragment_nutrition" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.nutritionapp.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nutritionInfoFragment"
        android:name="com.example.nutritionapp.nutrition_info.NutritionInfoFragment"
        android:label="fragment_nutrition_info"
        tools:layout="@layout/fragment_nutrition_info" />
    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.example.nutritionapp.diary.presentation.DiaryFragment"
        android:label="fragment_diary"
        tools:layout="@layout/fragment_diary" />
    <fragment
        android:id="@+id/mealFragment"
        android:name="com.example.nutritionapp.meal.presentation.MealFragment"
        android:label="fragment_meal"
        tools:layout="@layout/fragment_meal" />
    <fragment
        android:id="@+id/nutritionistFragment"
        android:name="com.example.nutritionapp.nutritionist.presentation.NutritionistFragment"
        android:label="fragment_nutritionist"
        tools:layout="@layout/fragment_nutritionist" />
</navigation>